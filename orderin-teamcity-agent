FROM jetbrains/teamcity-agent:latest

# Instal AWS CLI & ecs-deploy (https://github.com/fabfuel/ecs-deploy)
RUN apt-get update 
RUN apt-get -y install awscli
RUN apt-get -y install python-setuptools && easy_install pip
RUN pip install ecs-deploy

# Clean up
RUN rm -rf /tmp/* \
    && apt-get clean
